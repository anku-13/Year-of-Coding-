void printPatt(int n)
{
    for(int i=1;i<=n;i++)
    {
      for(int k=1;k<i;k++)
      {
        cout<<' ';
      }
      int x='A';
      for(int j=1;j<=n-i+1;j++)
      {
        cout<<char(x++);
      }
      x--;
      for(int j=1;j<=n-i+1;j++)
      {
        cout<<char(x--);
      }
      cout<<endl;
    }
}
